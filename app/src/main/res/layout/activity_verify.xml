<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miaxis.face.view.activity.VerifyActivity">

    <FrameLayout
        android:id="@+id/fl_camera_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextureView
            android:id="@+id/tv_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.miaxis.face.view.custom.RectSurfaceView
            android:id="@+id/rsv_rect"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <include layout="@layout/title" />

    <ImageView
        android:id="@+id/iv_face_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/face_box"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_liveness_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/qing_stroke_bg"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:text="请缓慢眨眼"
        android:textColor="@color/qing"
        android:textSize="60sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_upload_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/qing_stroke_bg"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:text=""
        android:textColor="@color/qing"
        android:textSize="70sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/qing_stroke_bg"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:text="请放身份证"
        android:textColor="@color/qing"
        android:textSize="90sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_gather_finger"
        android:layout_width="256dp"
        android:layout_height="360dp"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_gather_finger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#EEEEEE"
            android:scaleType="center"
            android:src="@drawable/finger_null" />

        <TextView
            android:id="@+id/tv_gather_finger_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/green_dark"
            android:padding="15dp"
            android:textSize="20sp"
            android:text="指纹采集"
            android:textColor="@color/white" />

    </RelativeLayout>

    <com.miaxis.face.view.custom.ResultView
        android:id="@+id/rv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
