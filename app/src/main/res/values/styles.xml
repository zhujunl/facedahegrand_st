<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>

    <style name="record_item">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="record_item_860s">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="stroke_button">
        <item name="android:background">@drawable/stroke_button_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_band_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="setting_button">
        <item name="android:background">@drawable/dark_bg_light_ripple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:background">@color/gray_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="VerticalLine">
        <item name="android:background">@color/gray_dark</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SpaceBody">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/stroke_shape</item>
    </style>

    <style name="SettingName">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="SettingRadioItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SettingRadioGroup">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="SettingEditItem">
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="stroke_button_860s">
        <item name="android:background">@drawable/stroke_button_bg</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_band_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="setting_button_860s">
        <item name="android:background">@drawable/dark_bg_light_ripple</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingItem_860s">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:background">@drawable/stroke_shape</item>
    </style>

    <style name="SettingName_860s">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="SettingRadioItem_860s">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SettingRadioGroup_860s">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="SettingEditItem_860s">
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
    </style>

</resources>
